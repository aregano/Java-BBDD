<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ricardo.models.Employee" table="employees">
		<id name="id">
			<generator class="increment"></generator>
		</id>
		<property name="nombre" column="firstName"></property>
		<property name="apellido" column="lastName"></property>		
	</class>

</hibernate-mapping>